.item {
  display: flex;
  padding: 20rpx 20rpx;
  border-bottom: 1rpx solid #eee;
}

.item .poster {
  width: 180rpx;
  height: 180rpx;
  margin-right: 20rpx;
}

.item .poster-bk {
  width: 100%;
  height: 500rpx;
}

.item .meta {
  flex: 1;
}

.item .meta .title,
.item .meta .price {
  display: block;
  font-weight: bold;
  margin-bottom: 15rpx;
}

.item .meta .title {
	font-size: 30rpx;
}

.item .meta .price {
  font-size: 34rpx;
  color: red;
}

.item .meta .time {
  font-size: 20rpx;
  color: grey;
}